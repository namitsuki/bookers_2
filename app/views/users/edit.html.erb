<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model:@user, local:true do |f| %>
        <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3>
            <%= @user.errors.count %> errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        </div>
        <div class="form-group">
          <%= f.label "name", for: "user_name" %>
          <%= f.text_field:name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label "Image", for: "user_image" %>
          <%= f.file_field:profile_image, accept:'image/*', class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label "Introduction", for: "user_introduction" %>
          <%= f.text_area:introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>