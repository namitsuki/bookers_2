<body>
  <main>
    <script src="https://kit.fontawesome.com/930da8373e.js" crossorigin="anonymous"></script>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model:@user, local:true do |f| %>
          <div id="error_explanation">
            <% if @user.errors.any? %>
            <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
          </div>
          <div class="form-group">
            <label for="inputName">Name</label>
            <br>
            <%= f.text_field :name, autofocus: true, id:"inputName", class:"w-100" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <br>
            <%= f.attachment_field :profile_image, class: "w-100" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
          <br>
          <%= f.text_area :introduction, class: "w-100" %>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
          </div>
          <% end %>
          </form>
        </div>
      </div>
    </div>
  </main>
</body>
